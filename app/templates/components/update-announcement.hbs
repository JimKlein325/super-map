{{#if updateAnnouncementForm}}
  <h4>Update {{announcement.title}} Announcement</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=announcement.title}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=announcement.body}}
      </div>

      <button {{action 'updateAnnouncement' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
